---
// Simple dark/light toggle switch for Starlight
---

<starlight-theme-toggle>
  <button
    type="button"
    class="toggle-btn"
    aria-label="Toggle dark mode"
  >
    <svg class="icon sun" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <circle cx="12" cy="12" r="5"></circle>
      <line x1="12" y1="1" x2="12" y2="3"></line>
      <line x1="12" y1="21" x2="12" y2="23"></line>
      <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"></line>
      <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"></line>
      <line x1="1" y1="12" x2="3" y2="12"></line>
      <line x1="21" y1="12" x2="23" y2="12"></line>
      <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"></line>
      <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"></line>
    </svg>
    <svg class="icon moon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
    </svg>
  </button>
</starlight-theme-toggle>

<style>
  .toggle-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0.5rem;
    border: 0;
    border-radius: 0.5rem;
    background: transparent;
    color: var(--sl-color-gray-1);
    cursor: pointer;
    transition: background-color 0.2s ease;
  }

  .toggle-btn:hover {
    background: var(--sl-color-gray-5);
  }

  .icon {
    width: 1.25rem;
    height: 1.25rem;
  }

  /* Show sun in dark mode, moon in light mode */
  :global([data-theme='dark']) .sun {
    display: block;
  }
  :global([data-theme='dark']) .moon {
    display: none;
  }
  :global([data-theme='light']) .sun {
    display: none;
  }
  :global([data-theme='light']) .moon {
    display: block;
  }

  /* Handle initial state before JS loads */
  .sun { display: none; }
  .moon { display: block; }

  @media (prefers-color-scheme: dark) {
    .sun { display: block; }
    .moon { display: none; }
  }
</style>

<script>
  class StarlightThemeToggle extends HTMLElement {
    constructor() {
      super();
      const btn = this.querySelector('button');
      
      btn?.addEventListener('click', () => {
        const currentTheme = document.documentElement.dataset.theme;
        const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
        
        // Update the theme
        document.documentElement.dataset.theme = newTheme;
        
        // Store preference
        localStorage.setItem('starlight-theme', newTheme);
      });
    }
  }

  customElements.define('starlight-theme-toggle', StarlightThemeToggle);
</script>
